<div class="container" id="sign_up" style="width: 350px">


<h2 style="margin-bottom: 50px; text-align: center">Welcome back!</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">

    <div style="margin-bottom: 25px">
      <%= f.input :email,
                  label: false,
                  placeholder: "Your Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div style="margin-bottom: 25px">
      <%= f.input :password,
                  label: false,
                  placeholder: "Your Password",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div style="margin-bottom: 25px">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

  </div>

  <div class="form-actions" style="margin-bottom: 10px; justify-content: center">
    <%= f.button :submit, "Sign In", class: "btn-submit", style: "width: 100%" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
