<div class="container" style="width: 700px">

  <h2 class="form-h2">Leave a review</h2>

  <%= simple_form_for [@booking, @review] do |f| %>

    <div class="form-inputs">

    <div class="input-field">
      <%= f.input :stars,
                  id: "review_stars",
                  min: 0,
                  min: 5,
                  label: false,
                  placeholder: "Rating" %>
    </div>


    <div class="input-field">
      <%= f.input :description,
                  label: false,
                  placeholder: "Comment" %>
    </div>

    </div>

    <div class="form-actions" id="form-cta" style="justify-content: space-around;">
      <%= link_to 'Cancel', profile_path, class: 'btn btn-submit btn-cancel' %>
      <%= f.submit "Add a review", class: "btn-submit" %>
    </div>

  <% end %>

</div>
