<div class="tab-container">
  <div class="my-toilets-content">
        <h2>My Notifications</h2>
    <% if current_user.bookings.empty? %>
      <h3>You don't have any notifications.</h3>
    <% else %>
      <div class="notification-heading">
        <h5>Pending notifications:</h5>
      </div>


      <% @toilets.each do |toilet| %>
        <% toilet.bookings.each do |booking| %>
          <% if booking.user_id != current_user.id %>
            <div class="review-card">
              <div class="review-card-content">
                <div style="margin-left: 30px; margin-top: 20px">
                  <i class="fas fa-bell" style="font-size: 42px; color: #F76D9F"></i>
                </div>
                <div style="margin-left: 30px; margin-top: 15px">
                  <h5>
                    <%= link_to toilet_path(booking.toilet) do %>
                      <%= booking.toilet.name %>
                    <% end %>
                    was visited by
                    <%= User.find(booking.user_id).full_name %>
                  </h5>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>


    <% end %>
  </div>
</div>

