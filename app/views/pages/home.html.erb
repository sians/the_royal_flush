<div class="hero home-content">

  <div class="home-form">

    <h2 style="margin-bottom: 45px">Find the perfect loo, near you</h2>

    <div style="margin-bottom: 15px">
      <p>Where?</p>
    </div>

      <div class="searchBar">

        <%= render './toilets/login_form' %>

      </div>
  </div>


</div>

  <div class="toilet-cards">

    <h2 style="margin-bottom: 25px">Our suggestions</h2>

    <div class="row">

      <% @toilets.sample(8).each do |toilet| %>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <%= link_to toilet_path(toilet) do %>
            <div class="card toilet-card" style="margin-bottom: 15px">
              <div class="toilet-img" style="background-image: url(<%= photo_or_placeholder(toilet) %>)"></div>
              <div class="card-content">
                <h5><%= toilet.name %></h5>
                <ul class="stars stars-sm">
                  <li><i class="fas fa-star"></i></li>
                  <li><i class="fas fa-star"></i></li>
                  <li><i class="fas fa-star"></i></li>
                  <li><i class="fas fa-star"></i></li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>

  <div style="margin: 50px; text-align: center">

  <h2>Active members</h2>

  <div style="margin: 50px">

    <div class="bd-example" style="width: 650px; height: 400px; margin: auto;">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://res.cloudinary.com/djkvtunck/image/upload/v1567105104/Le_Wagon_19.08.01-080_1_pfnhf5.jpg" alt="..." style="width: 650px; height: 400px; background-size: cover">
            <div class="carousel-caption d-none d-md-block" style="color: white; background: rgba(0, 0, 0, 0.4); border-radius: 8px">
              <h5>Dinis – Poop Enthusiastic</h5>
              <p>Love litterature and even more while being in the loo!</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/djkvtunck/image/upload/v1567105111/Le_Wagon_19.08.01-087_1_vpi05s.jpg" alt="..." style="width: 650px; height: 400px; background-size: cover">
            <div class="carousel-caption d-none d-md-block" style="color: white; background: rgba(0, 0, 0, 0.4); border-radius: 8px">
              <h5>Jonathan – Loo Master</h5>
              <p>Already 3 years now I am travelling all around the world to find the best poo spot!</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/djkvtunck/image/upload/v1567105205/Le_Wagon_19.08.01-025_1_pvartc.jpg" alt="..." style="width: 650px; height: 400px; background-size: cover">
            <div class="carousel-caption d-none d-md-block" style="color: white; background: rgba(0, 0, 0, 0.4); border-radius: 8px">
              <h5>Vianney</h5>
              <p>The Royal Flush became my favorite app so far!</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  </div>

</div>
