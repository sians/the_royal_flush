
<%= simple_form_for toilets_path(@toilet), method: :patch do |f| %>

  <div class="form-inputs">
  <div class="form-inputs">
    <div class="input-field">
      <%= f.input :name,
                  label: false,
                  placeholder: "Name" %>
    </div>
    <div class="input-field">
      <%= f.input :address,
                  label: false,
                  placeholder: "Address" %>
    </div>
    <div class="input-field">
      <%= f.input :price,
                  label: false,
                  placeholder: "Price" %>
    </div>
    <div class="input-field">
      <%= f.input :description,
                  label: false,
                  placeholder: "Description" %>
    </div>

    <div class="row">
      <div class="col-6">
        <%= f.input :wifi, as: :boolean %>
        <%= f.input :reading_material, as: :boolean  %>
        <%= f.input :air_con, as: :boolean  %>
      </div>

      <div class="col-6">
        <%= f.input :window, as: :boolean  %>
        <%= f.input :floor_heating, as: :boolean  %>
        <%= f.input :speakers, as: :boolean  %>
      </div>
    </div>

    <div>
      <p>ðŸ“¸ Add a photo of your toilet!</p>
      <%= f.input :photo,
                  label: false,
                  placeholder: false %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
  </div>

  <div class="form-actions" id="form-cta">
    <%= link_to 'Cancel', profile_path, class: 'btn btn-submit btn-cancel' %>
    <%= f.button :submit, 'Edit', class: "btn-submit"%>
  </div>
<% end %>
