<div class="container" id="add_toilet" style="width: 500px">

<h2 class="form-h2">Add a new Toilet</h2>


<%= simple_form_for(@toilet) do |f| %>

  <div class="form-inputs">
    <div class="input-field">
      <%= f.input :name,
                  label: false,
                  placeholder: "Toilet Name" %>
    </div>
    <div class="input-field">
      <%= f.input :address,
                  label: false,
                  placeholder: "Address" %>
    </div>
    <div class="input-field">
      <%= f.input :description,
                  label: false,
                  placeholder: "Description" %>
    </div>

    <div class="row">
      <div class="col-6">
        <%= f.input :wifi %>
        <%= f.input :reading_material %>
        <%= f.input :air_con %>
      </div>

      <div class="col-6">
        <%= f.input :window %>
        <%= f.input :floor_heating %>
        <%= f.input :speakers %>
      </div>
    </div>

    <div>
      <p>ðŸ“¸ Add a photo of your toilet!</p>
      <%= f.input :photo,
                  label: false,
                  placeholder: false %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
  </div>

  <div class="form-actions" id="form-cta" style="margin-left: 100px">
    <%= f.button :submit, class: "btn-submit"%>
  </div>
<% end %>

