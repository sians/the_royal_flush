<h1>Add a new Toilet</h1>


<%= simple_form_for(@toilet) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :wifi %>
    <%= f.input :reading_material %>
    <%= f.input :air_con %>
    <%= f.input :window %>
    <%= f.input :floor_heating %>
    <%= f.input :speakers %>

    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= link_to '<< Cancel', root_path %>

<p>Find me in app/views/toilets/new.html.erb</p>
